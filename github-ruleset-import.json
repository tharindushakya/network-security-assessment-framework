{
  "name": "NSAF Branch Protection Ruleset",
  "description": "Complete branch protection rules for Network Security Assessment Framework repository with release-branch-only policy",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": [
        "refs/heads/main",
        "refs/heads/release", 
        "refs/heads/dev"
      ],
      "exclude": []
    }
  },
  "rules": [
    {
      "type": "creation",
      "description": "Allow branch creation"
    },
    {
      "type": "update",
      "description": "Allow branch updates with restrictions",
      "parameters": {
        "update_allows_fetch_and_merge": true
      }
    },
    {
      "type": "deletion",
      "description": "Prevent branch deletion",
      "parameters": {
        "restricted_deletions": true
      }
    },
    {
      "type": "required_linear_history",
      "description": "Require linear history for main branch"
    },
    {
      "type": "force_push",
      "description": "Prevent force pushes",
      "parameters": {
        "restricted_force_pushes": true
      }
    },
    {
      "type": "pull_request",
      "description": "Require pull requests for all protected branches",
      "parameters": {
        "dismiss_stale_reviews_on_push": true,
        "require_code_owner_review": true,
        "require_last_push_approval": false,
        "required_approving_review_count": 1,
        "required_review_thread_resolution": true
      }
    },
    {
      "type": "required_status_checks",
      "description": "Require status checks to pass",
      "parameters": {
        "required_status_checks": [
          {
            "context": "ci/github-actions",
            "integration_id": null
          },
          {
            "context": "security-scan",
            "integration_id": null
          }
        ],
        "strict_required_status_checks_policy": true
      }
    },
    {
      "type": "non_fast_forward",
      "description": "Prevent non-fast-forward updates"
    }
  ],
  "bypass_actors": [
    {
      "actor_id": null,
      "actor_type": "RepositoryRole",
      "bypass_mode": "always",
      "role_name": "admin"
    }
  ]
}
